              <a href="/dashboard/about" 
                 class="mobile-nav-link block text-white hover:text-yellow-400 py-3 px-4 rounded-lg hover:bg-white/10 transition-all duration-300 font-medium relative overflow-hidden group">
                <span class="relative z-10">À propos</span>
                <div class="absolute inset-0 bg-yellow-400/10 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
              </a>
              <a href="/dashboard/contact" 
                 class="mobile-nav-link block text-white hover:text-yellow-400 py-3 px-4 rounded-lg hover:bg-white/10 transition-all duration-300 font-medium relative overflow-hidden group">
                <span class="relative z-10">Contact</span>
