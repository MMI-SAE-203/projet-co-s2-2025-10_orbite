// Toutes les cat√©gories disponibles dans PocketBase
const allCategories = [
  'Sport',
  'Soir√©e', 
  'Cin√©ma',
  'Jeux',
  'Musique',
  'Chill',
  'Voyages',
  '√âtudes',
  'Resto',
  'Rencontres',
  'Cuisine',
  'Shopping',
  'Culture',
  'Bien-√™tre',
  'B√©n√©volat'
];

// Fonction pour obtenir l'ic√¥ne de cat√©gorie
function getCategoryIcon(category) {
  const icons = {
    'sport': '‚öΩ',
    'soir√©e': 'üéâ',
    'cin√©ma': 'üé¨',
    'jeux': 'üéÆ',
    'musique': 'üéµ',
    'chill': 'üòå',
    'voyages': '‚úàÔ∏è',
    '√©tudes': 'üìö',
    'resto': 'üçΩÔ∏è',
    'rencontres': 'üë•',
    'cuisine': 'üë®‚Äçüç≥',
    'shopping': 'üõçÔ∏è',
    'culture': 'üé≠',
    'bien-√™tre': 'üßò',
    'b√©n√©volat': 'ü§ù'
  };
  return icons[category.toLowerCase()] || 'üåü';
}

// Fonction pour nettoyer le texte HTML
function cleanHtmlText(text) {
  if (!text) return '';
  
  // Si c'est une cha√Æne, nettoyer le HTML
  if (typeof text === 'string') {
    return text.replace(/<[^>]*>/g, '').trim();
  }
  
  // Pour tout autre type, convertir en cha√Æne
  return String(text);
}

// ‚úÖ Fonction pour d√©terminer le statut de l'√©v√©nement
function getEventStatus(dateString) {
  const eventDate = new Date(dateString);
  const now = new Date();
  
  if (eventDate > now) {
    return { status: 'upcoming', label: '√Ä venir', class: 'bg-green-600' };
  } else {
    return { status: 'passed', label: 'Pass√©', class: 'bg-red-600' };
  }
}
