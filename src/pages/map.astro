<script define:vars={{ eventsWithLocation }}>
  document.addEventListener('DOMContentLoaded', async () => {
    // CoordonnÃ©es de MontbÃ©liard (centre par dÃ©faut)
    const montbeliardCoords = [47.5109, 6.7989];
    
    // Initialiser la carte
    const map = L.map('map', {
      center: montbeliardCoords,
      zoom: 13,
      zoomControl: true,
      attributionControl: true
    });

    // Ajouter les tuiles de la carte
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
      maxZoom: 19
    }).addTo(map);

    // Fonction pour obtenir l'icÃ´ne de catÃ©gorie
    function getCategoryIcon(category) {
      const icons = {
        'sport': 'ğŸŒ',
        'soirÃ©e': 'ğŸ‰',
        'cinÃ©ma': 'ğŸ¬',
        'jeux': 'ğŸ®',
        'musique': 'ğŸµ',
        'chill': 'ğŸ˜Œ',
        'voyages': 'âœˆï¸',
        'Ã©tudes': 'ğŸ“š',
        'resto': 'ğŸ½ï¸',
        'rencontres': 'ğŸ‘¥',
        'cuisine': 'ğŸ‘¨â€ğŸ³',
        'shopping': 'ğŸ›ï¸',
        'culture': 'ğŸ­',
        'bien-Ãªtre': 'ğŸ§˜',
        'confÃ©rence': 'ğŸ¤',
        'atelier': 'ğŸ› ï¸',
        'divers': 'ğŸ“¦'
      };
      return icons[category?.toLowerCase()] || 'ğŸŒŸ';
    }

    // Fonction pour formater la date
    function formatDate(dateString) {
      try {
        const date = new Date(dateString);
        return date.toLocaleDateString('fr-FR', {
          day: 'numeric',
          month: 'short',
          hour: '2-digit',
          minute: '2-digit'
        });
      } catch {
        return 'Date non dÃ©finie';
      }
    }

    // CrÃ©er l'icÃ´ne personnalisÃ©e avec le logo Orbite
    const orbiteIcon = L.divIcon({
      className: 'custom-orbite-marker',
      html: `
        <div class="orbite-marker-container">
          <div class="orbite-marker-pulse"></div>
          <img src="/images/logo-orbite.svg" alt="Orbite" class="orbite-marker-logo" />
        </div>
      `,
      iconSize: [50, 50],
      iconAnchor: [25, 50],
      popupAnchor: [0, -60]
    });

    // Groupe de marqueurs pour gÃ©rer les clusters si nÃ©cessaire
    const markers = [];

    // Ajouter un marqueur pour chaque Ã©vÃ©nement
    eventsWithLocation.forEach(event => {
      try {
        // Parser les coordonnÃ©es
        const location = typeof event.location === 'string' 
          ? JSON.parse(event.location) 
          : event.location;
        
        if (!location || !location.lat || !location.lng) {
          console.warn('CoordonnÃ©es invalides pour l\'Ã©vÃ©nement:', event.id);
          return;
        }

        const lat = parseFloat(location.lat);
        const lng = parseFloat(location.lng);

        if (isNaN(lat) || isNaN(lng)) {
          console.warn('CoordonnÃ©es non numÃ©riques pour l\'Ã©vÃ©nement:', event.id);
          return;
        }

        // CrÃ©er le marqueur
        const marker = L.marker([lat, lng], { 
          icon: orbiteIcon,
          title: event.nom_event
        }).addTo(map);

        // CrÃ©er le contenu du popup
        const popupContent = `
          <div class="orbite-popup-event">
            <div class="flex items-start space-x-3 p-2">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                  <span class="text-lg">${getCategoryIcon(event.categorie_event)}</span>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="font-bold text-purple-900 text-base leading-tight mb-1">
                  ${event.nom_event || 'Ã‰vÃ©nement sans nom'}
                </h3>
                <div class="space-y-1 text-xs text-gray-600">
                  <div class="flex items-center">
                    <span class="mr-1">ğŸ“…</span>
                    <span>${formatDate(event.date_event)}</span>
                  </div>
                  <div class="flex items-center">
                    <span class="mr-1">ğŸ“</span>
                    <span>${event.lieu_event || 'Lieu non spÃ©cifiÃ©'}</span>
                  </div>
                  <div class="flex items-center">
                    <span class="mr-1">ğŸ‘¥</span>
                    <span>${event.nb_users_max || 0} participants max</span>
                  </div>
                  ${event.nb_points_gagne ? `
                    <div class="flex items-center">
                      <span class="mr-1">â­</span>
                      <span class="text-yellow-600 font-medium">${event.nb_points_gagne} points</span>
                    </div>
                  ` : ''}
                </div>
                
              </div>
            </div>
          </div>
        `;

        // Ajouter le popup
        marker.bindPopup(popupContent, {
          maxWidth: 280,
          className: 'orbite-popup-container-event',
          offset: [0, -10]
        });

        // Ajouter les Ã©vÃ©nements hover - afficher le grand popup au survol
        marker.on('mouseover', function() {
          // Ouvrir le popup au survol
          marker.openPopup();

          // Effet visuel sur le marqueur
          const markerElement = marker.getElement();
          if (markerElement) {
            const logo = markerElement.querySelector('.orbite-marker-logo');
            if (logo) {
              logo.style.transform = 'scale(1.2)';
              logo.style.filter = 'drop-shadow(0 0 10px rgba(147, 51, 234, 0.8))';
            }
          }
        });

        marker.on('mouseout', function() {
          // Fermer le popup quand on quitte le survol
          marker.closePopup();

          // Reset de l'effet visuel
          const markerElement = marker.getElement();
          if (markerElement) {
            const logo = markerElement.querySelector('.orbite-marker-logo');
            if (logo) {
              logo.style.transform = 'scale(1)';
              logo.style.filter = 'none';
            }
          }
        });

        // Ajouter l'Ã©vÃ©nement click - redirection immÃ©diate
        marker.on('click', function() {
          // Redirection immÃ©diate vers la page de dÃ©tail
          window.location.href = `/activities/${event.id}`;
        });

        markers.push(marker);

      } catch (error) {
        console.error('Erreur lors de la crÃ©ation du marqueur pour l\'Ã©vÃ©nement:', event.id, error);
      }
    });

    // Ajuster la vue pour inclure tous les marqueurs
    if (markers.length > 0) {
      const group = new L.featureGroup(markers);
      map.fitBounds(group.getBounds().pad(0.1));
      
      // Limiter le zoom maximum
      if (map.getZoom() > 15) {
        map.setZoom(15);
      }
    }

    // Ajouter des contrÃ´les personnalisÃ©s
    const customControl = L.control({ position: 'bottomright' });
    customControl.onAdd = function(map) {
      const div = L.DomUtil.create('div', 'custom-control');
      div.innerHTML = `
        <div class="bg-white/90 backdrop-blur-sm rounded-lg p-2 border border-gray-300 shadow-lg">
          <div class="flex items-center space-x-2 text-gray-700 text-sm">
            <span class="text-purple-600">ğŸ¯</span>
            <span>Zoom: <span id="zoom-level">${map.getZoom()}</span></span>
          </div>
        </div>
      `;
      return div;
    };
    customControl.addTo(map);

    // Mettre Ã  jour le niveau de zoom
    map.on('zoomend', function() {
      const zoomLevel = document.getElementById('zoom-level');
      if (zoomLevel) {
        zoomLevel.textContent = map.getZoom();
      }
    });

    console.log(`âœ… ${markers.length} marqueurs ajoutÃ©s Ã  la carte`);
  });
</script>

