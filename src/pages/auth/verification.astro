            üì§ Envoyer ma demande de v√©rification
          </button>
        </form>
        
        <!-- Status messages -->
        <div id="form-status" class="mt-4 hidden"></div>

        <!-- Info Footer -->
        <div class="mt-8 p-4 bg-gray-50 rounded-lg">
          <h4 class="font-semibold text-gray-800 mb-2">üïê D√©lai de traitement</h4>
          <p class="text-sm text-gray-600">
            Nous v√©rifierons votre compte dans les plus brefs d√©lais (g√©n√©ralement sous 24-48h). 
            Vous recevrez un email de confirmation une fois votre compte activ√©.
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // R√©cup√©rer les donn√©es de l'utilisateur depuis sessionStorage
    const pendingUser = sessionStorage.getItem('pendingUser');
    if (pendingUser) {
      const userData = JSON.parse(pendingUser);
      const emailInput = document.getElementById('email') as HTMLInputElement;
      const nameInput = document.getElementById('student_name') as HTMLInputElement;
      
      if (emailInput) emailInput.value = userData.email;
      if (nameInput) nameInput.value = userData.name;
    }

    // Gestion des previews d'images
    const frontInput = document.getElementById('card_front') as HTMLInputElement;
    const backInput = document.getElementById('card_back') as HTMLInputElement;
    
    frontInput?.addEventListener('change', (e) => handleImagePreview(e, 'front'));
    backInput?.addEventListener('change', (e) => handleImagePreview(e, 'back'));

    // Gestion du formulaire
    const form = document.getElementById('verification-form') as HTMLFormElement;
    const status = document.getElementById('form-status') as HTMLDivElement;
    
    form?.addEventListener('submit', handleSubmit);

    function handleImagePreview(event: Event, type: 'front' | 'back') {
      const input = event.target as HTMLInputElement;
      const file = input.files?.[0];
      
      if (file) {
        const reader = new FileReader();
        reader.onload = (e) => {
          const preview = document.getElementById(`${type}-preview`);
          const img = document.getElementById(`${type}-img`) as HTMLImageElement;
          
          if (preview && img) {
            img.src = e.target?.result as string;
            preview.classList.remove('hidden');
          }
        };
        reader.readAsDataURL(file);
      }
    }

    async function handleSubmit(event: Event) {
      event.preventDefault();
      
      const formData = new FormData(event.target as HTMLFormElement);
      
      // Ajouter des informations suppl√©mentaires
      formData.append('subject', 'Nouvelle demande de v√©rification - Orbite');
      formData.append('_replyto', formData.get('email') as string);
      
      try {
        status.innerHTML = '<div class="bg-blue-100 text-blue-700 p-4 rounded-lg">üì§ Envoi en cours...</div>';
        status.classList.remove('hidden');
        
        const response = await fetch('https://formspree.io/f/xjkwqrve', {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });
        
        if (response.ok) {
          status.innerHTML = `
            <div class="bg-green-100 text-green-700 p-4 rounded-lg">
              <div class="flex items-center space-x-2">
                <span class="text-2xl">‚úÖ</span>
                <div>
                  <h3 class="font-semibold">Demande envoy√©e avec succ√®s !</h3>
                  <p class="text-sm mt-1">
                    Nous avons bien re√ßu votre demande de v√©rification. 
                    Vous recevrez un email de confirmation dans les plus brefs d√©lais.
                  </p>
                </div>
              </div>
            </div>
          `;
          form.reset();
          
          // Nettoyer le sessionStorage
          sessionStorage.removeItem('pendingUser');
          
          // Redirection vers la page de connexion apr√®s 5 secondes
          setTimeout(() => {
            window.location.href = '/auth/login';
          }, 5000);
          
        } else {
          const data = await response.json();
          if (data.errors) {
            status.innerHTML = `<div class="bg-red-100 text-red-700 p-4 rounded-lg">‚ùå ${data.errors.map((error: any) => error.message).join(', ')}</div>`;
          } else {
            status.innerHTML = '<div class="bg-red-100 text-red-700 p-4 rounded-lg">‚ùå Erreur lors de l\'envoi. Veuillez r√©essayer.</div>';
          }
        }
      } catch (error) {
        console.error('Erreur:', error);
        status.innerHTML = '<div class="bg-red-100 text-red-700 p-4 rounded-lg">‚ùå Erreur de connexion. Veuillez r√©essayer.</div>';
      }
    }
  });
</script>
