---
import Layout from '../../layouts/Layout.astro';
import HeaderDashboard from '../../components/HeaderDashboard.astro';
import FooterDashboard from '../../components/FooterDashboard.astro';
---

<Layout title="Debug PocketBase - Orbite">
  <HeaderDashboard />

  <div class="min-h-screen bg-gradient-to-br from-purple-900 via-purple-800 to-indigo-900 pt-20">
    <div class="max-w-4xl mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold text-white mb-8 text-center">
        ğŸ”§ Diagnostic PocketBase
      </h1>
      
      <div class="bg-white/10 backdrop-blur-sm rounded-xl p-8 border border-white/20 shadow-2xl">
        <div id="debug-results" class="space-y-4">
          <div class="text-white">Chargement des diagnostics...</div>
        </div>
        
        <button 
          id="run-debug" 
          class="mt-6 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-all"
        >
          ğŸ”„ Relancer les tests
        </button>
      </div>
    </div>
  </div>

  <FooterDashboard />
</Layout>

<script>
  import PocketBase from 'pocketbase';
  
  const pb = new PocketBase('http://127.0.0.1:8090');
  
  async function runDiagnostics() {
    const resultsDiv = document.getElementById('debug-results');
    if (!resultsDiv) return;
    
    resultsDiv.innerHTML = '<div class="text-yellow-400">ğŸ” ExÃ©cution des diagnostics...</div>';
    
    const results = [];
    
    // Test 1: Connexion Ã  PocketBase
    try {
      const health = await pb.health.check();
      results.push(`<div class="text-green-400">âœ… PocketBase accessible: ${JSON.stringify(health)}</div>`);
    } catch (error) {
      results.push(`<div class="text-red-400">âŒ PocketBase inaccessible: ${error.message}</div>`);
    }
    
    // Test 2: Authentification
    try {
      const isAuth = pb.authStore.isValid;
      const user = pb.authStore.model;
      results.push(`<div class="text-${isAuth ? 'green' : 'red'}-400">${isAuth ? 'âœ…' : 'âŒ'} Authentification: ${isAuth ? 'ConnectÃ©' : 'Non connectÃ©'}</div>`);
      if (user) {
        results.push(`<div class="text-blue-400">ğŸ‘¤ Utilisateur: ${user.email || user.username} (ID: ${user.id})</div>`);
      }
    } catch (error) {
      results.push(`<div class="text-red-400">âŒ Erreur auth: ${error.message}</div>`);
    }
    
    // Test 3: Collections disponibles
    try {
      const collections = await pb.collections.getFullList();
      results.push(`<div class="text-green-400">âœ… Collections trouvÃ©es: ${collections.length}</div>`);
      results.push(`<div class="text-blue-400">ğŸ“š Collections: ${collections.map(c => c.name).join(', ')}</div>`);
      
      // VÃ©rifier si la collection 'event' existe
      const eventCollection = collections.find(c => c.name === 'event');
      if (eventCollection) {
        results.push(`<div class="text-green-400">âœ… Collection 'event' trouvÃ©e</div>`);
        results.push(`<div class="text-blue-400">ğŸ“‹ SchÃ©ma event: ${JSON.stringify(eventCollection.schema?.map(f => f.name) || 'Non disponible')}</div>`);
      } else {
        results.push(`<div class="text-red-400">âŒ Collection 'event' non trouvÃ©e</div>`);
      }
    } catch (error) {
      results.push(`<div class="text-red-400">âŒ Erreur collections: ${error.message}</div>`);
    }
    
    // Test 4: Permissions de la collection event
    if (pb.authStore.isValid) {
      try {
        // Essayer de rÃ©cupÃ©rer les Ã©vÃ©nements
        const events = await pb.collection('event').getList(1, 1);
        results.push(`<div class="text-green-400">âœ… Lecture events: ${events.totalItems} Ã©vÃ©nements trouvÃ©s</div>`);
      } catch (error) {
        results.push(`<div class="text-red-400">âŒ Erreur lecture events: ${error.message}</div>`);
      }
      
      // Test de crÃ©ation (avec donnÃ©es minimales)
      try {
        const testData = {
          nom_event: 'Test Debug',
          description_event: 'Test de diagnostic',
          date_event: new Date().toISOString(),
          categorie_event: 'Test',
          lieu_event: 'Test',
          nb_users_max: 1,
          nb_points_gagne: 0,
          user: pb.authStore.model.id,
          date_pub_event: new Date().toISOString(),
          location: JSON.stringify({ lat: 47.5101, lng: 6.7988 })
        };
        
        // Ne pas vraiment crÃ©er, juste tester la validation
        results.push(`<div class="text-blue-400">ğŸ§ª Test de donnÃ©es prÃªt (non exÃ©cutÃ©)</div>`);
        results.push(`<div class="text-gray-400">ğŸ“ DonnÃ©es test: ${JSON.stringify(testData, null, 2)}</div>`);
        
      } catch (error) {
        results.push(`<div class="text-red-400">âŒ Erreur prÃ©paration test: ${error.message}</div>`);
      }
    }
    
    // Test 5: Variables d'environnement et configuration
    results.push(`<div class="text-blue-400">ğŸŒ URL PocketBase: ${pb.baseUrl}</div>`);
    results.push(`<div class="text-blue-400">ğŸ”— URL actuelle: ${window.location.href}</div>`);
    
    resultsDiv.innerHTML = results.join('');
  }
  
  document.addEventListener('DOMContentLoaded', () => {
    runDiagnostics();
    
    document.getElementById('run-debug')?.addEventListener('click', () => {
      runDiagnostics();
    });
  });
</script>

