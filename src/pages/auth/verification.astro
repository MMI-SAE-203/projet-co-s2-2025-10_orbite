            />
          </div>

          <div>
            <label for="student_name" class="block text-sm font-medium text-gray-700 mb-2">
              Nom complet (tel qu'il appara√Æt sur votre carte √©tudiante)
            </label>
            <input 
              type="text" 
              id="student_name" 
              name="student_name" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
              placeholder="Nom et pr√©nom complets"
            />
          </div>

          <div>
            <label for="student_id" class="block text-sm font-medium text-gray-700 mb-2">
              Num√©ro √©tudiant (optionnel)
            </label>
            <input 
              type="text" 
              id="student_id" 
              name="student_id" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
              placeholder="Votre num√©ro √©tudiant si vous l'avez"
            />
          </div>
          
          <!-- Photo Upload Section -->
          <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-800">Photos de votre carte √©tudiante</h3>
            <p class="text-sm text-gray-600">
              Veuillez fournir des photos claires et lisibles de votre carte √©tudiante UFC (recto et verso)
            </p>
            
            <div class="grid md:grid-cols-2 gap-4">
              <!-- Recto -->
              <div>
                <label for="card_front" class="block text-sm font-medium text-gray-700 mb-2">
                  üì∑ Carte √©tudiante - Recto
                </label>
                <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center hover:border-purple-400 transition-colors">
                  <input 
                    type="file" 
                    id="card_front" 
                    name="card_front" 
                    accept="image/*"
                    required
                    class="hidden"
                  />
                  <label for="card_front" class="cursor-pointer">
                    <div class="text-gray-500">
                      <span class="text-3xl block mb-2">üì∏</span>
                      <span class="text-sm">Cliquez pour ajouter la photo du recto</span>
                    </div>
                  </label>
                  <div id="front-preview" class="mt-2 hidden">
                    <img id="front-img" class="max-w-full h-32 object-cover rounded" />
                    <p class="text-xs text-green-600 mt-1">‚úÖ Photo ajout√©e</p>
                  </div>
                </div>
              </div>
              
              <!-- Verso -->
              <div>
                <label for="card_back" class="block text-sm font-medium text-gray-700 mb-2">
                  üì∑ Carte √©tudiante - Verso
