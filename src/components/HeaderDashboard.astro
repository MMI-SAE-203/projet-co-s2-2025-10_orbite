  </header>
  
  <script>
    import PocketBase from 'pocketbase';
    
    const pb = new PocketBase('https://pocketbaseprojet.alexandre-demling.fr');
    
    document.addEventListener('DOMContentLoaded', () => {
      // Afficher le nom de l'utilisateur
      const userNameSpan = document.getElementById('user-name');
      const userNameMobile = document.getElementById('user-name-mobile');
      if (pb.authStore.model) {
        const userName = pb.authStore.model.name || pb.authStore.model.email;
        if (userNameSpan) userNameSpan.textContent = userName;
        if (userNameMobile) userNameMobile.textContent = userName;
      }
      
      // Gérer la déconnexion (desktop et mobile)
      const logoutBtn = document.getElementById('logout-btn');
      const logoutBtnMobile = document.getElementById('logout-btn-mobile');
      
      const handleLogout = () => {
        pb.authStore.clear();
        window.location.href = '/';
      };
      
      logoutBtn?.addEventListener('click', handleLogout);
      logoutBtnMobile?.addEventListener('click', handleLogout);
      
      // Mobile menu
      const mobileMenuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      
      if (mobileMenuBtn && mobileMenu) {
        mobileMenuBtn.addEventListener('click', (e) => {
          e.stopPropagation();
          mobileMenu.classList.toggle('hidden');
          
          // Changer l'icône du burger
          const svg = mobileMenuBtn.querySelector('svg');
          const isOpen = !mobileMenu.classList.contains('hidden');
          
          if (isOpen) {
            svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>';
          } else {
            svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
          }
        });
        
        // Fermer le menu si on clique ailleurs
        document.addEventListener('click', (e) => {
          if (!mobileMenuBtn.contains(e.target) && !mobileMenu.contains(e.target)) {
            mobileMenu.classList.add('hidden');
            const svg = mobileMenuBtn.querySelector('svg');
            svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
          }
        });
        
        // Fermer le menu sur les liens de navigation mobile
        const mobileLinks = mobileMenu.querySelectorAll('a');
        mobileLinks.forEach(link => {
          link.addEventListener('click', () => {
            mobileMenu.classList.add('hidden');
            const svg = mobileMenuBtn.querySelector('svg');
            svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
          });
        });
      }
      
      // Gestion des états actifs pour les liens de navigation
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll('.nav-link, .mobile-nav-link');
      
      navLinks.forEach(link => {
        const href = link.getAttribute('href');
        if (href === currentPath || (href === '/dashboard' && currentPath === '/dashboard')) {
          // Ajouter l'état actif
          link.classList.add('active');
          link.style.backgroundColor = 'rgba(250, 204, 21, 0.2)';
          link.style.color = '#fbbf24';
          link.style.transform = 'scale(1.05)';
          link.style.boxShadow = '0 0 20px rgba(250, 204, 21, 0.3)';
        }
        
        // Effet de clic
        link.addEventListener('click', function(e) {
          // Retirer l'état actif de tous les liens
          navLinks.forEach(l => {
            l.classList.remove('active');
            l.style.backgroundColor = '';
            l.style.color = '';
            l.style.transform = '';
            l.style.boxShadow = '';
          });
          
          // Ajouter l'état actif au lien cliqué
          this.classList.add('active');
          this.style.backgroundColor = 'rgba(250, 204, 21, 0.3)';
          this.style.color = '#fbbf24';
          this.style.transform = 'scale(1.05)';
          this.style.boxShadow = '0 0 20px rgba(250, 204, 21, 0.4)';
          
          // Effet de pulsation au clic
          this.style.animation = 'pulse 0.3s ease-in-out';
          setTimeout(() => {
            this.style.animation = '';
          }, 300);
        });
      });
    });
  </script>
  
  <style>
    /* Animation pour le menu mobile */
    #mobile-menu {
      transition: all 0.3s ease-in-out;
    }
    
    #mobile-menu.hidden {
      opacity: 0;
      transform: translateY(-10px);
    }
    
    #mobile-menu:not(.hidden) {
      opacity: 1;
      transform: translateY(0);
    }
    
    /* Animation de pulsation pour les clics */
    @keyframes pulse {
      0% {
        transform: scale(1.05);
      }
      50% {
        transform: scale(1.1);
      }
      100% {
        transform: scale(1.05);
      }
    }
    
    /* Effet de brillance au survol */
    .nav-link:hover,
    .mobile-nav-link:hover {
      text-shadow: 0 0 10px rgba(250, 204, 21, 0.5);
    }
    
    /* État actif persistant */
    .nav-link.active,
    .mobile-nav-link.active {
      background: rgba(250, 204, 21, 0.2) !important;
      color: #fbbf24 !important;
      transform: scale(1.05) !important;
      box-shadow: 0 0 20px rgba(250, 204, 21, 0.3) !important;
      border: 1px solid rgba(250, 204, 21, 0.3);
    }
    
    /* Transition fluide pour tous les états */
    .nav-link,
    .mobile-nav-link {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
  </style>
  