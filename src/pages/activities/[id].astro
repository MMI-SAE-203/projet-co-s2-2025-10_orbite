      // M√©thode 3: Recherche dans tous les √©v√©nements
      const allEvents = await getAllEvents();
      event = allEvents.find(e => e.id === id);
      
      if (event) {
        console.log('‚úÖ √âv√©nement trouv√© via recherche globale');
      }
    }
    
    if (event) {
      console.log('‚úÖ √âv√©nement charg√© c√¥t√© serveur:', event.nom_event);
    }
    
  } catch (error) {
    console.error('‚ùå Erreur lors du chargement c√¥t√© serveur:', error);
  }
}

// Si toujours pas d'√©v√©nement, cr√©er une page d'erreur informative
if (!event) {
  console.log('‚ùå Aucun √©v√©nement trouv√©, redirection vers page d\'erreur');
  // Au lieu de rediriger, on va afficher une page d'erreur avec diagnostic
}

// Fonctions utilitaires
function formatDate(dateString) {
  if (!dateString) return 'Date non sp√©cifi√©e';
  try {
    const date = new Date(dateString);
    if (isNaN(date.getTime())) return 'Date invalide';
    const options = { 
      weekday: 'long', 
      day: 'numeric', 
      month: 'long', 
      year: 'numeric'
    };
    return date.toLocaleDateString('fr-FR', options);
  } catch (e) {
    console.error("Erreur lors du formatage de la date:", e);
    return 'Date invalide';
  }
}

function cleanHtmlText(text) {
  if (!text) return '';
  if (typeof text === 'object' && text.lat && text.lng) {
    return `Coordonn√©es: ${text.lat.toFixed(4)}, ${text.lng.toFixed(4)}`;
  }
  if (typeof text === 'string') {
    return text.replace(/<\/?[^>]+(>|$)/g, "");
  }
  return String(text);
}

function getCategoryIcon(category) {
  const icons = {
    'sport': '‚öΩ', 'soir√©e': 'üéâ', 'cin√©ma': 'üé¨', 'jeux': 'üéÆ',
    'musique': 'üéµ', 'chill': 'üòå', 'voyages': '‚úàÔ∏è', '√©tudes': 'üìö',
    'resto': 'üçΩÔ∏è', 'rencontres': 'üë•', 'cuisine': 'üë®‚Äçüç≥', 'shopping': 'üõçÔ∏è',
    'culture': 'üé≠', 'bien-√™tre': 'üßò'
  };
  return icons[category?.toLowerCase()] || 'üåü';
}

// Variables pour l'affichage
let mapLat = 47.5101;
let mapLng = 6.7988;
let imageUrl = '';
let currentParticipants = 0;

// ‚úÖ V√©rifier si l'√©v√©nement est pass√©
let isEventPassed = false;
if (event && event.date_event) {
  const eventDate = new Date(event.date_event);
  const now = new Date();
  isEventPassed = eventDate < now;
}

if (event) {
  if (event.location && typeof event.location === 'object' && event.location.lat && event.location.lng) {
    mapLat = parseFloat(event.location.lat);
    mapLng = parseFloat(event.location.lng);
  }
  
  if (event.image_event) {
    imageUrl = getImageUrl(event, event.image_event);
  }
  
  currentParticipants = event.participe ? event.participe.length : 0;
}
